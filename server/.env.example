PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Authentication
# Set to true to require authentication for terminal access
REQUIRE_AUTH=false
# JWT secret for signing tokens (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-secret-key-change-in-production
# JWT access token expiration (e.g., 15m, 1h, 1d)
JWT_EXPIRES_IN=15m
# JWT refresh token expiration (e.g., 7d, 30d)
JWT_REFRESH_EXPIRES_IN=7d

# Database
DATABASE_URL="file:./prisma/dev.db"

# Terminal Configuration
# Maximum number of terminals per connection
MAX_TERMINALS=10

# Rate Limiting
# Rate limit: max requests per window
RATE_LIMIT_MAX=100
# Rate limit window in milliseconds
RATE_LIMIT_WINDOW=60000

# CORS (production only - comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com

# Logging
# Set log level (error, warn, info, debug)
LOG_LEVEL=debug
# Force file logging in development
LOG_TO_FILE=false
