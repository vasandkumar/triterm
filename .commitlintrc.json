{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "chore", "ci", "build", "revert"]
    ],
    "subject-case": [2, "never", ["upper-case"]],
    "header-max-length": [2, "always", 150],
    "body-max-line-length": [2, "always", 200]
  }
}
